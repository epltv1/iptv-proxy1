{
  "version": 2,
  "rewrites": [
    { "source": "/api/playlist", "destination": "/api/playlist.js" },
    { "source": "/api/proxy", "destination": "/api/proxy.js" },
    { "source": "/play", "destination": "/public/play.html" },
    { "source": "/(.*)", "destination": "/public/index.html" }
  ],
  "headers": [
    {
      "source": "/api/playlist",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Content-Type", "value": "application/vnd.apple.mpegurl" }
      ]
    },
    {
      "source": "/api/proxy",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Content-Type", "value": "video/mp2t" }
      ]
    }
  ]
}
